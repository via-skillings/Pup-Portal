<!--Handlebars template for login page-->
<!--collect user inputs for email & password, and submit with login button-->
<h2>Login</h2>
<h3>Enter Your Login Information</h3>

<form class="form login-form">
  <div class="form-group">
    <label for="email-login">Email:</label>
    <input class="form-input" type="text" id="email-login" />
  </div>
  <div class="form-group">
    <label for="password-login">Password:</label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Login</button>
  </div>
</form>

<!--connect script to handle login with login.js file-->
<script src="/public/js/login.js"></script>
